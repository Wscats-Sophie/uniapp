/*每个页面公共css */
page {
  background: #FAFAFA;
  padding-top: 80rpx;
}
.page {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
  position: absolute;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  /* background-image: url(static/bgj.jpg); */
}
.pageblock {
  background-color: #f8f8f8;
}
/* 图标文字共用样式 */
.icon-label {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.icon-label .icon {
  margin-right: 5px;
  margin-top: 5rpx;
  width: 36rpx;
  height: 36rpx;
}
.icon-label .icon.icon-row {
  width: 24rpx;
  height: 12rpx;
}
.icon-label .label {
  margin-left: 5px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  font-size: 26rpx;
}
.icon-label .label text {
  color: #ff8000;
}
.icon-label .label text.label-default {
  color: #4D4D4D;
}
.icon-label .label text.label-gray {
  color: #A6A6A6;
}
.icon-label .label text.label-blue {
  color: #3071F3;
}
.icon-label .label text:nth-child(2) {
  margin-top: 8rpx;
  color: #333;
  font-weight: bold;
}
.horizontal-line {
  background: #D9D9D9;
  height: 1rpx;
  margin: 0 -30rpx;
}
.vertical-line {
  background: #333;
  height: 10px;
  width: 1px;
  margin: 0 20rpx;
}

